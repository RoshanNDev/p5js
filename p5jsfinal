<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.3/p5.js"></script>
    
    <script>
    var rectangle = []
     
            function setup() {
            createCanvas(800,600);
        }

        function draw() {
            background(0)
          ellipse(mouseX,mouseY, 20,20)
          if (frameCount% 30 == 0) {
              rectangle.push(new Touch())
          }
          
          for (i = 0;i < rectangle.length; i++){
              rectangle[i].display()
              rectangle[i].move()}
              
        }
          
        
    function Touch(){
            this.x = random(width)
            this.y = random(height)
            
            this.display = function(){
                rect(this.x,this.y,70,70)
                
            }
        this.move = function(){
            this.x -= 4
            
        }
        
        }
       

    </script>
</head>

<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/thewonderer123/p5js/blob/gh-pages/p5jsfinal.html?footer=0"></script>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas').remove());
        });
    </script>
</body>

</html>
